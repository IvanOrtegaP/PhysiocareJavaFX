<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="529.0" prefWidth="504.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.physiocare.PhysioCareController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Physiocare" textFill="#5119df">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <ListView fx:id="lsPatients" prefHeight="200.0" prefWidth="200.0" />
      <HBox prefHeight="24.0" prefWidth="326.0">
         <children>
            <Label text="Login" />
            <TextField fx:id="txtLogin">
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </TextField>
            <Label text="Password">
               <HBox.margin>
                  <Insets left="20.0" right="5.0" />
               </HBox.margin></Label>
            <TextField fx:id="txtPassword" />
         </children>
      </HBox>
      <HBox prefHeight="24.0" prefWidth="326.0">
         <children>
            <Label text="Name" />
            <TextField fx:id="txtName">
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </TextField>
            <Label text="Surname">
               <HBox.margin>
                  <Insets left="20.0" right="5.0" />
               </HBox.margin></Label>
            <TextField fx:id="txtSurname" />
         </children>
      </HBox>
      <HBox prefHeight="32.0" prefWidth="326.0">
         <children>
            <Label text="Birth Date (YYYY-MM-DD)" />
            <TextField fx:id="txtBirthDate">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="32.0" prefWidth="326.0">
         <children>
            <Label text="Address" />
            <TextField fx:id="txtAddress">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="32.0" prefWidth="326.0">
         <children>
            <Label text="Insurance Number" />
            <TextField fx:id="txtInsuranceNumber">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="30.0" prefWidth="326.0">
         <children>
            <Button fx:id="btPost" mnemonicParsing="false" text="Add">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btPut" mnemonicParsing="false" text="Modify">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btDelete" mnemonicParsing="false" text="Delete">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>