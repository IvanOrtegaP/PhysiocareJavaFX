<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.physiocare.controller.options.OptionsViewController">
    <top>
        <VBox>

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Options" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="10" left="15" right="15" top="15" />
                </padding>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Button fx:id="btnGenerateReports" onAction="#handleGenerateReports" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 5;" text="Generate Reports" />
            <Button fx:id="btnGeneratePayrolls" onAction="#handleGeneratePayrolls" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;" text="Generate Payrolls" />
            <Button fx:id="btnSendEmails" onAction="#handleSendEmails" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 5;" text="Send Emails" />
            <Button fx:id="btnUploadFiles" onAction="#handleUploadFiles" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-background-radius: 5;" text="Upload Files via FTP" />
        </VBox>
    </center>
</BorderPane>
